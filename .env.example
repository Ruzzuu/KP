# ===== PERGUNU PROJECT ENVIRONMENT CONFIGURATION =====
# Copy this file to .env and update the values for your environment
# WARNING: Never commit .env files to version control!

# ===== APPLICATION ENVIRONMENT =====
NODE_ENV=development
# Options: development, staging, production

# ===== API CONFIGURATION =====
# Frontend API endpoint (where your React app will call)
VITE_API_BASE_URL=http://localhost:3001/api
# File server endpoint for uploads/downloads
VITE_FILE_SERVER_URL=http://localhost:3002

# Backend API server port
PORT=3001
# File server port  
FILE_PORT=3002

# ===== CORS SECURITY =====
# Comma-separated list of allowed origins for CORS
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
# Main frontend URL for CORS
FRONTEND_URL=http://localhost:5173

# ===== SECURITY CONFIGURATION =====
# Bcrypt salt rounds for password hashing (higher = more secure but slower)
VITE_BCRYPT_SALT_ROUNDS=12
# Maximum login attempts before lockout
VITE_MAX_LOGIN_ATTEMPTS=5
# Session timeout in milliseconds (default: 1 hour = 3600000)
VITE_SESSION_TIMEOUT=3600000

# ===== ADMIN CREDENTIALS =====
# Admin email (leave empty to use default)
VITE_ADMIN_EMAIL=admin@pergunu.com
# Admin username (leave empty to use default)
VITE_ADMIN_USERNAME=admin
# WARNING: These should be changed in production!

# ===== EMAIL SERVICE CONFIGURATION =====
# EmailJS configuration for contact forms
VITE_EMAILJS_SERVICE_ID=your_emailjs_service_id
VITE_EMAILJS_TEMPLATE_ID=your_emailjs_template_id
VITE_EMAILJS_PUBLIC_KEY=your_emailjs_public_key

# ===== DATABASE CONFIGURATION =====
# For production, you might want to use a real database
# DATABASE_URL=your_database_connection_string

# ===== FILE UPLOAD LIMITS =====
# Maximum file size for uploads (in bytes)
MAX_FILE_SIZE=10485760
# Maximum number of files per user
MAX_FILES_PER_USER=10

# ===== RATE LIMITING =====
# Requests per minute per IP
RATE_LIMIT_RPM=100
# Rate limit window in minutes
RATE_LIMIT_WINDOW=15

# ===== LOGGING =====
# Log level: error, warn, info, debug
LOG_LEVEL=info
# Enable request logging
ENABLE_REQUEST_LOGGING=true

# ===== PRODUCTION SECURITY HEADERS =====
# Content Security Policy
CSP_ENABLED=true
# HTTP Strict Transport Security (HSTS)
HSTS_ENABLED=true
# X-Frame-Options header
X_FRAME_OPTIONS=DENY

# ===== SSL/TLS CONFIGURATION (Production) =====
# SSL_CERT_PATH=/path/to/certificate.crt
# SSL_KEY_PATH=/path/to/private.key
# FORCE_HTTPS=true

# ===== EXTERNAL SERVICES =====
# Google Analytics ID
VITE_GA_TRACKING_ID=GA-XXXXXXXXX
# Sentry DSN for error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ===== CLOUDINARY CONFIGURATION =====
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ===== DEVELOPMENT ONLY =====
# Enable detailed error messages (disable in production)
DETAILED_ERRORS=true
# Enable API documentation endpoint
ENABLE_API_DOCS=true
